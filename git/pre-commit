#!/bin/sh

set -e

if git st --short | grep -q '^.[^[:blank:]]'
then
cat <<EOF
You have unstaged files. This might corrupt the git-hook outcome. Either stage
them or run
git stash push -ku
git commit
git stash pop
EOF
exit 1
fi

set -v

nix flake check
nixpkgs-fmt --check $(find . -name '*.nix' | grep -vE '(cabal|hconv)\.nix')
nix shell .#noX.pkgs.emacs-git-with-packages --command emacs --batch --eval "(package-activate-all)" -l home/emacs/init.el
nix shell .#withPlasma.pkgs.emacs-git-with-packages --command emacs --batch --eval "(package-activate-all)" -l home/emacs/init.el
nix shell .#withPlasmaWayland.pkgs.emacs-pgtk-with-packages --command emacs --batch --eval "(package-activate-all)" -l home/emacs/init.el

(
    cd pkgs/utils-rust
    export RUSTFLAGS=-Dwarnings
    cargo fmt --check
    cargo clippy --locked
)
