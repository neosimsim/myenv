\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{lists}[2017/04/17 Privides list environments]

\ProcessOptions\relax

\RequirePackage{array}
\RequirePackage{etoolbox}

% Define a base table class each table and column has the same width.
\newenvironment{basictable}{
	\newcommand{\basicrow}[2]{%
			##1 & ##2
	}
	\begin{tabular*}{\textwidth}{@{}>{\raggedleft\arraybackslash}p{4cm}l@{}}
}{%
	\end{tabular*}
}

% Every \item can be followed by one or more paragraphs
% of description:
%
%     \item
%         {date range}
%         {company}
%         {role}
%     	  {One or more paragraphs describing what achieved during this application.}
\newenvironment{eventlist}{
	\renewcommand{\item}[4]{%
			\basicrow{##1}{\parbox[t]{0.7\linewidth}{##2 \\ {\Large ##3} \ifstrempty{##4}{}{\medskip\\ ##4}}} \bigskip \\%
	}
	\begin{basictable}
}{
	\end{basictable}
}

% Every \item can be followed by one or more paragraphs
% of description:
%
%     \item
%         {name}
%         {description}
%         {url}
\newenvironment{projectlist}{
	\renewcommand{\item}[3]{%
			\cvrow{##1}{\parbox[t]{0.7\linewidth}{##2\medskip\\ {\footnotesize\url{##3}}}} \medskip \\%
	}
	\begin{cvtable}
}{
	\end{cvtable}
}

\newenvironment{factlist}{
	\renewcommand{\item}[2]{%
			\cvrow{##1}{\parbox[t]{0.7\linewidth}{##2}} \medskip \\%
	}
	\begin{cvtable}
}{
	\end{cvtable}
}

\newenvironment{perslist}[1][]{
	\newcommand{\picpath}{#1}
	\par\vspace{-0.4cm}%
	\begin{minipage}{0.7\linewidth}%
		\begin{flushleft}%
			\begin{factlist}%
			\item{name}{\@author}
			\item{e-mail}{\href{mailto:\Email}{\Email}}
			\item{phone}{\Phone}
}{%
			\end{factlist}%
		\end{flushleft}%
	\end{minipage}%
	\begin{minipage}{4cm}
		\begin{flushright}
			\includegraphics[width=3.5cm]{\picpath}
		\end{flushright}
	\end{minipage}
}

