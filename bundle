# The idea of this script is based on 'The Unix Programming Language'.

echo '#!/bin/sh'
echo
echo '# To unbundle, run this file'
for i
do
	echo "echo $i"
	echo "mkdir -p `dirname $i`"
	echo "sed 's/.//' >$i <<'//GO.SYSIN DD $i'"
	sed "s/^/-/" $i
	echo "//GO.SYSIN DD $i"
done
