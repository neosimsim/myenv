#!/bin/sh

set -e

ACME_VARFONT=${ACME_VARFONT:-/mnt/font/DejaVuSansMono/14a/font}
ACME_FIXFONT=${ACME_FIXFONT:-/mnt/font/FreeSans/13a/font}

. 9 # make sure PLAN9 is in PATH

export tabstop=4
export TERM=dumb
export SHELL="$(which rc)"
export acmeshell="$SHELL"
export PAGER="$(which cat)"
export GIT_PAGER=$PAGER
export EDITOR=editinacme
export NO_COLOR=1

. u # move PLAN9 to end of path

exec acme -a -f $ACME_VARFONT -F $ACME_FIXFONT "$@"
